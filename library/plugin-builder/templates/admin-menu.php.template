/**
 * Add admin menu.
 */
function {{prefix}}_add_admin_menu(): void {
	add_menu_page(
		__( '{{page_title}}', '{{prefix}}' ),
		__( '{{menu_title}}', '{{prefix}}' ),
		'manage_options',
		'{{menu_slug}}',
		'{{prefix}}_render_admin_page',
		'{{icon}}',
		{{position}}
	);
{{submenu_code}}
}
add_action( 'admin_menu', '{{prefix}}_add_admin_menu' );

/**
 * Render main admin page.
 */
function {{prefix}}_render_admin_page(): void {
	if ( ! current_user_can( 'manage_options' ) ) {
		return;
	}
	?>
	<div class="wrap">
		<h1><?php echo esc_html( get_admin_page_title() ); ?></h1>
		<div class="{{prefix}}-admin-content">
			<p><?php esc_html_e( 'Welcome to the admin page.', '{{prefix}}' ); ?></p>
		</div>
	</div>
	<?php
}
