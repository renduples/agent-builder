
/**
 * Add meta box for {{singular}}.
 */
function {{prefix}}_add_{{slug}}_meta_box(): void {
	add_meta_box(
		'{{prefix}}_{{slug}}_meta',
		__( '{{singular}} Details', '{{prefix}}' ),
		'{{prefix}}_render_{{slug}}_meta_box',
		'{{slug}}',
		'normal',
		'high'
	);
}
add_action( 'add_meta_boxes', '{{prefix}}_add_{{slug}}_meta_box' );

/**
 * Render meta box content.
 *
 * @param WP_Post $post Current post object.
 */
function {{prefix}}_render_{{slug}}_meta_box( $post ): void {
	wp_nonce_field( '{{prefix}}_{{slug}}_meta_nonce', '{{prefix}}_{{slug}}_nonce' );
	{{fields_html}}
}
