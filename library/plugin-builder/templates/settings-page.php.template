/**
 * Add settings page to admin menu.
 */
function {{prefix}}_add_settings_page(): void {
	add_submenu_page(
		'{{parent_slug}}',
		__( '{{page_title}}', '{{prefix}}' ),
		__( '{{menu_title}}', '{{prefix}}' ),
		'manage_options',
		'{{menu_slug}}',
		'{{prefix}}_render_settings_page'
	);
}
add_action( 'admin_menu', '{{prefix}}_add_settings_page' );

/**
 * Register settings.
 */
function {{prefix}}_register_settings(): void {
	register_setting( '{{prefix}}_settings', '{{prefix}}_settings', '{{prefix}}_sanitize_settings' );
{{sections_code}}
{{fields_code}}
}
add_action( 'admin_init', '{{prefix}}_register_settings' );

/**
 * Render settings page.
 */
function {{prefix}}_render_settings_page(): void {
	if ( ! current_user_can( 'manage_options' ) ) {
		return;
	}

	// Show success message.
	if ( isset( $_GET['settings-updated'] ) ) {
		add_settings_error(
			'{{prefix}}_messages',
			'{{prefix}}_message',
			__( 'Settings saved.', '{{prefix}}' ),
			'updated'
		);
	}

	settings_errors( '{{prefix}}_messages' );
	?>
	<div class="wrap">
		<h1><?php echo esc_html( get_admin_page_title() ); ?></h1>
		<form action="options.php" method="post">
			<?php
			settings_fields( '{{prefix}}_settings' );
			do_settings_sections( '{{menu_slug}}' );
			submit_button( __( 'Save Settings', '{{prefix}}' ) );
			?>
		</form>
	</div>
	<?php
}

/**
 * Sanitize settings.
 *
 * @param array $input Raw input.
 * @return array Sanitized input.
 */
function {{prefix}}_sanitize_settings( $input ): array {
	$sanitized = array();

	// Add field sanitization here.
	foreach ( $input as $key => $value ) {
		$sanitized[ $key ] = sanitize_text_field( $value );
	}

	return $sanitized;
}
